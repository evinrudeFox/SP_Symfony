{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Formulaire d'inscription</h1>

    {{ form_start(registrationForm, {'method': 'POST', 'attr': {'class': 'form'}}) }}
        <div class="form-group">
            {{ form_label(registrationForm.firstname, 'Pr√©nom', {'label_attr': {'for': 'inputFirstname'}}) }}
            {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control', 'id': 'inputFirstname'}}) }}
            {{ form_errors(registrationForm.firstname) }}
        </div>
        <div class="form-group">
            {{ form_label(registrationForm.lastname, 'Nom', {'label_attr': {'for': 'inputLastname'}}) }}
            {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control', 'id': 'inputLastname'}}) }}
            {{ form_errors(registrationForm.lastname) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.pseudo, 'Pseudo', {'label_attr': {'for': 'inputPseudo'}}) }}
            {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control', 'id': 'inputPseudo'}}) }}
            {{ form_errors(registrationForm.pseudo) }}
        </div>
        <div class="form-group">
            {{ form_label(registrationForm.email, 'Email', {'label_attr': {'for': 'inputEmail'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'id': 'inputEmail'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>
        <div class="form-group">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'for': 'inputPassword'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'id': 'inputPassword'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(registrationForm) }}
{% endblock %}
